---
import Layout from '../layouts/Layout.astro';
import ScreenShareVideo from '../components/ScreenShareVideo.vue';
---

<Layout title="Screen Sharing - WebRTC">
  <ScreenShareVideo client:only="vue" />
</Layout>

<style>
.screen-share-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
  color: #e2e8f0;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.page-header {
  text-align: center;
  margin-bottom: 2rem;
}

.page-header h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.page-header p {
  font-size: 1.1rem;
  color: #a0aec0;
  margin: 0;
}

.screen-share-wrapper {
  margin-top: 2rem;
}

@media (max-width: 768px) {
  .page-header h1 {
    font-size: 2rem;
  }
  
  .page-header p {
    font-size: 1rem;
  }
  
  .container {
    padding: 1rem;
  }
}
</style>
